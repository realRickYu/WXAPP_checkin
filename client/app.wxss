/**app.wxss**/

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}

.image {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}

.details {
  display: flex;
  flex-direction: column;
  width: 330rpx;
  height: 130rpx;
}

.username {
  font-size: 10px;
}

.sendtime {
  font-size: 10px;
}

.placename {
  width: 250rpx;
  font-weight: bold;
  font-size: 10px;
}

.text {
  align-items: center;
  font-size: 20px;
}

.heart {
  display: flex;
}

.likenumber {
  font-size: 15px;
}

.div {
  width: 100%;
  height: 1px;
  background: linear-gradient(to left, #efefef, #b6b6b6, #efefef);
}
